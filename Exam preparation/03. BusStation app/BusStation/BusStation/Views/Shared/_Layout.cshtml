<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bus Station</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="/css/style.css">
    @*<link rel="stylesheet" href="~/BusStation.styles.css" asp-append-version="true" />*@
</head>
<body>
    <nav>
        <div class="navigation">
            <ul>
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <li><a href="/Tickets/MyTickets" class="link-light">My Tickets</a></li>
                    <li><a href="/Destinations/Add" class="link-light">Add Destination</a></li>
                    <li><a href="/Destinations/All" class="link-light">Destinations</a></li>
                    <li><a href="/Users/Logout" class="link-light">Logout</a></li>
                }
                else
                {
                    <li><a href="/Users/Login" class="link-light">Login</a></li>
                    <li><a href="/Users/Register" class="link-light">Register</a></li>
                }              
                
            </ul>
        </div>
    </nav>
    <main>
        <div id="page-container">
            <div id="content-wrap">
                @RenderBody()
            </div>
            <footer id="footer">
                <div class="container-fluid text-center">
                    <small class="footer-background text-white">
                        CopyRight &copy; Bus Station 2023. All rights reserved.
                    </small>
                </div>
            </footer>
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>