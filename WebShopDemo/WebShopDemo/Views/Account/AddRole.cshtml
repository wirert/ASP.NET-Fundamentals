@using Microsoft.AspNetCore.Identity;
@using WebShopDemo.Core.Data.Models.Account;

@model AddRoleViewModel
@inject RoleManager<IdentityRole> roleManager
@inject UserManager<ApplicationUser> userManager

@{
    ViewBag.Title = "Add role to user";
}

<h1>@ViewBag.Title</h1>
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post">            
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label for="@Model.">Select user e-Mail</label>
                <select asp-for="@Model.Email" class="form-control">
                    <option selected>Choose...</option>
                    @foreach (string email in ViewBag.UsersEmails)
                    {
                    <option>@email</option>
                    }
                </select>
            </div>

            <div class="form-group col-md-4">
                <label for="@Model.RoleName">Select role</label>
                <select asp-for="@Model.RoleName" class="form-control">ViewBag.Roles
                    @foreach (string roleName in ViewBag.Roles)
                    {
                        <option>@roleName</option>
                    }
                </select>
            </div>
            <hr />
            <button type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
        </form>
    </div>


