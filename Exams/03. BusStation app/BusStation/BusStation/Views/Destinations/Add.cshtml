@model AddDestinationViewModel

<h2>Add new Destination</h2>
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
   <div class="form-group">
      <label>Destination Name:</label>
      <input type="text" placeholder="Destination Name"  id="destinationName" name="DestinationName" />
        <span asp-validation-for="@Model.DestinationName"></span>
   </div>
   <div class="form-group">
      <label>Origin:</label>
      <input type="text" placeholder="Origin" id="origin" name="Origin" />
        <span asp-validation-for="@Model.Origin"></span>
   </div>
   <div class="form-group">
      <label>Date and Time:</label>
      <input type="datetime-local" id="date" name="Date" />
        <span asp-validation-for="@Model.Date"></span>
   </div>
   <div class="form-group">
      <label>Image:</label>
      <input type="text" id="imageUrl" name="ImageUrl" />
        <span asp-validation-for="@Model.ImageUrl"></span>
   </div>
   <input type="submit" class="create" value="Create">
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}